<h2><%= @cocktail.name %></h2>

<ul>
 <% @cocktail.doses.each do |dose| %>
  <li><%=dose.description%> - <%=dose.ingredient.name%> <%= link_to "(delete)",
            dose_path(dose),
            method: :delete,
            data: { confirm: "Are you sure?" } %></li>
 <% end %>
</ul>

<p><%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %></p>
<p><%= link_to 'Back to list', cocktails_path %></p>
